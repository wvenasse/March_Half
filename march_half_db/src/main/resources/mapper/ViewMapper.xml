<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.dao.ViewDao">
    <insert id="addView" parameterType="org.example.pojo.View">
        insert into views(postId,openid,viewTime)
        values (#{postId},#{openid},#{viewTime})
    </insert>
    <delete id="delView" parameterType="java.lang.Integer">
        delete from views where viewId=#{viewId}
    </delete>
    <select id="updateView" parameterType="org.example.pojo.View" resultType="java.lang.Integer">
        update views
        set postId=#{postId},openid=#{openid},viewTime=#{viewTime}
        where viewId=#{viewId}
    </select>

    <select id="getAllView" resultType="org.example.pojo.View">
        select * from views where postId=#{postId} OR openid=#{openid}
    </select>

    <select id="getViewById" resultType="org.example.pojo.View">
        select * from views where viewId=#{viewId}
     </select>
</mapper>