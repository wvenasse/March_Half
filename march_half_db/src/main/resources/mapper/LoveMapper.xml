<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.dao.LoveDao">
    <insert id="addLove" parameterType="org.example.pojo.Love">
        insert into loves(openid,loveType,toOpenid,toPostId,loveTime)
        values (#{openid},#{loveType},#{toOpenid},#{toPostId},#{loveTime})
    </insert>
    <delete id="delLove" parameterType="java.lang.Integer">
        delete from loves where loveId=#{loveId}
    </delete>
    <select id="updateLove" parameterType="org.example.pojo.Love" resultType="java.lang.Integer">
        update loves
        set openid=#{openid},loveType=#{loveType},toOpenid=#{toOpenid},toPostId=#{toPostId},loveTime=#{loveTime}
        where loveId=#{loveId}
    </select>

    <select id="getAllLove" resultType="org.example.pojo.Love">
        select * from loves where openid=#{openid} OR toOpenid=#{toOpenid} OR toPostId=#{toPostId}
    </select>

    <select id="getLoveById" resultType="org.example.pojo.Love">
        select * from loves where loveId=#{loveId}
     </select>
</mapper>