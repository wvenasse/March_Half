/* pages/send-post/send-post.wxss */
page{
    background-color: #f7f8fa;
    height: 100%;
}

.content {
    height: 100%;
    display: flex;
    flex-direction: column;
}

.postCell {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx;
    background: #fff;
}

.cellTitle {
    display: flex;
    align-items: center;
}

.warning {
    display: flex;
    align-items: baseline;
}

.cellContent {
    display: flex;
    font-size: 30rpx;
    color: #737373;
    align-items: center;
}

.noContent {
    padding: 0 10rpx;
    color: #868686;
    font-size: 32rpx;
    font-weight: 600;
}

.haveContent {
    padding: 0 10rpx;
    color: #000000;
    font-size: 32rpx;
    font-weight: 600;
}

.postTitle {
    margin-top: 20rpx;
    background: #ffffff;
    padding: 20rpx;
    display: flex;
    align-items: center;
}

.title{
    font-size: 40rpx;
    font-weight: 600;
    color: #868686;
    flex: 0 0 80rpx;
}

.postInput {
    padding-left: 10rpx;
    flex: auto;
}

.pinput {
    color: #000000;
    font-size: 32rpx;
}

.postDetail {

}

.detailContent {
    background: #f7f7f785;
    border-radius: 10rpx;
    width: 100%;
    padding: 40rpx 20rpx;
    font-size: 30rpx;
}

.detailContent textarea{
    width: 100%;
    color: #000000;
    font-size: 32rpx;
}

.currentWordNumber {
    text-align: right;
    color: #ababab;
}

.sheetContain {
    padding: 20rpx 0rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}

.sheetType {
    width: 200rpx;
    text-align: center;
    background: #d0d0d0;
    line-height: 60rpx;
    border-radius: 30rpx;
    color: #fff;
    font-weight: 500;
    margin-bottom: 20rpx;
}

.selectType {
    background: #ad0014;
}

.footer {
    position: fixed;
    bottom: 0;
    height: 90rpx;
    width: 100%;
    background: #fff;
}