<view class="container">
  <view class="pure_top"></view>
  <view class="userinfo">
    <block wx:if="{{canIUse}}">
      <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 登录/注册 </button>
      <block wx:else>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
        <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      </block>
    </block>
    <block wx:else>
      <view>请升级微信版本</view>
    </block>
  </view>
  <view class="infomation">
    <view class="userCard">
      <view class="cardHead">
        个人操作
      </view>
      <view class="carfBody">
        <view class="littleCard cDorm">
          <view class="littleHead">
            我的地址
          </view>
          <view class="littleBody">
            {{userDetail.userAddress}}
          </view>
        </view>
        <view class="littleCard cRoom">
          <view class="littleHead">
            我的订单
          </view>
          <view class="littleBody">
            {{userDetail.userOrder}}
          </view>
        </view>
        <view class="littleCard cBed">
          <view class="littleHead">
            我的讨论
          </view>
          <view class="littleBody">
            {{userDetail.userPost}}
          </view>
        </view>
      </view>
    </view>

    <view class="userCard">
      <view class="cardHead">
        个人信息
      </view>
      <view class="carfBody">
        <view class="littleCard cFav">
          <view class="littleHead">
            我的点赞
          </view>
          <view class="littleBody">
            {{userDetail.userLike}}
          </view>
        </view>
        <view class="littleCard cLike">
          <view class="littleHead">
            我的收藏
          </view>
          <view class="littleBody">
            {{userDetail.userLove}}
          </view>
        </view>
        <view class="littleCard cRem">
          <view class="littleHead">
            我的评论
          </view>
          <view class="littleBody">
            {{userDetail.userEva}}
          </view>
        </view>
      </view>
    </view>

  </view>

</view>