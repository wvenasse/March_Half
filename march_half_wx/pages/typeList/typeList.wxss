/* pages/typeList/typeList.wxss */
page{
    background: #f7f8fa;
    height: 100%;
}
.content {
    height: 100%;
}

.rankHead {
    border-top: 2rpx solid #eeeeee;
    height: 8%;
}

.serviceLists {
    padding: 0 30rpx;
    background: #fff;
    height: 91%;
}
.serviceCard {
    display: flex;
    flex-direction: row;
    margin: 5rpx 0;
    padding: 40rpx 0;
    justify-content: flex-start;
    border-bottom: 1px solid #eaeaea;
}

.serviceHead {
    width: 25%;
    display: flex;
    justify-content: center;
}

.serviceImg {
    border-radius: 50%;
    height: 140rpx;
    width: 140rpx;
}

.serviceContent {
    width: 75%;
    padding-left: 3%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-around;
}

.serviceName {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-weight: bolder;
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.serviceStar {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.serviceText {
    color: #333333;
    font-size: small;
    margin: 0 10rpx;
}
.serviceOrder{
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.serviceOrderNum {
    color: #8a8a8a;
    font-size: 22rpx;
}

.serviceStars {
    color: #8a8a8a;
    font-size: 22rpx;
}

.servicePrice {
    display: flex;
    align-items: center;
}

.servicePriceNum {
    color: #ea0606;
    font-size: 38rpx;
}

.servicePriceTip {
    color: #676767;
    font-size: 26rpx;
}