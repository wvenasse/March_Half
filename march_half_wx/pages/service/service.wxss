/* pages/service/service.wxss */
page{
    background-color: #f7f8fa;
    height: 100%;
}

.content {
    height: 100%;
}

.serviceHead {
    background: #fff;
    padding: 0 30rpx 20rpx 30rpx;
    display: flex;
    height: 20%;
}

.serviceImgs {
    display: flex;
    align-items: flex-end;
}

.serviceImg {
    max-width: 100%;
    width: 250rpx;
    height: 250rpx;
}

.serviceContent {
    width: 100%;
    display: flex;
    align-items: flex-start;
    flex-direction: column;
    justify-content: flex-end;
    padding: 0 20rpx;
}

.serviceName {
    font-size: 44rpx;
    font-weight: 600;
    display: flex;
    justify-content: space-between;
    width: 100%;
}

.serviceYear {
    width: 100%;
    font-size: 28rpx;
    color: #676767;
    display: flex;
    justify-content: space-between;
    margin: 10rpx 0
}

.serviceAddress {
    font-size: 28rpx;
    color: #676767;
    margin: 10rpx 0
}

.serviceStar {
    
}

.serviceCard {
    padding: 30rpx 20rpx;
    background: #fff;
    margin-top: 30rpx;
}

.stitle {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.titleleft,.titleright {
    display: flex;
    align-items: center;
}

.stips{
    color: #adabab;
    font-size: 30rpx;
    margin: 0 20rpx;
}

.sintro {
    margin: 0 20rpx;
    font-size: 30rpx;
    font-weight: 600;
}

.scontent {
    padding: 30rpx 0
}

.serviceIcons {

}

.serviceIcon {
    width: 200rpx;
    height: 200rpx;
    margin-right: 10rpx;
}

.serviceIntro {
    color: #616161;
    line-height: 50rpx;
    font-size: 28rpx;
}

.serviceTab {
    margin-top: 30rpx;
    background: #fff;
}

.serviceDetail {
    background: #fff;
}

