<!--pages/home/home.wxml-->
<view class="container">
    <view class="header">
        <swiper class="swiper" indicator-dots="true" autoplay="true" interval="5000" duration="1000"
            indicator-color="rgba(255,255,255,0.7)" indicator-active-color="#009E9D" circular="true">
            <block wx:for="{{notice}}" wx:for-index="index" wx:key="noticeId">
                <swiper-item>
                    <image src="{{item.noticeImg}}" class="slide-image" mode="aspectFit" />
                </swiper-item>
            </block>
        </swiper>

        <view class="affairs">
            <view class="affair">
                <view class="affairCard cfirst">
                    <view class="cardIcon">
                        <image class="cardImg" src="../../utils/imgs/affair/skin.png"></image>
                    </view>
                    <view class="cardHead">
                        保姆服务
                    </view>
                </view>
                <view class="affairCard csecond">
                    <view class="cardIcon">
                        <image class="cardImg" src="../../utils/imgs/affair/hourglass.png"></image>
                    </view>
                    <view class="cardHead">
                        钟点工
                    </view>
                </view>
                <view class="affairCard cthree">
                    <view class="cardIcon">
                        <image class="cardImg" src="../../utils/imgs/affair/wrench.png"></image>
                    </view>
                    <view class="cardHead">
                        综合维修
                    </view>
                </view>
                <view class="affairCard cfour">
                    <view class="cardIcon">
                        <image class="cardImg" src="../../utils/imgs/affair/repair.png"></image>
                    </view>
                    <view class="cardHead">
                        月嫂服务
                    </view>
                </view>
            </view>
            <view class="affair">
                <view class="affairCard cfive">
                    <view class="cardIcon">
                        <image class="cardImg" src="../../utils/imgs/affair/act.png"></image>
                    </view>
                    <view class="cardHead">
                        助老服务
                    </view>
                </view>
                <view class="affairCard csix">
                    <view class="cardIcon">
                        <image class="cardImg" src="../../utils/imgs/affair/api.png"></image>
                    </view>
                    <view class="cardHead">
                        装修装饰
                    </view>
                </view>
                <view class="affairCard cseven">
                    <view class="cardIcon">
                        <image class="cardImg" src="../../utils/imgs/affair/anmo.png"></image>
                    </view>
                    <view class="cardHead">
                        按摩保健
                    </view>
                </view>
                <view class="affairCard ceight">
                    <view class="cardIcon">
                        <image class="cardImg" src="../../utils/imgs/affair/more.png"></image>
                    </view>
                    <view class="cardHead">
                        更多
                    </view>
                </view>
            </view>
        </view>
    </view>

    <view class="content">
        

        <view class="posts">
            <view class="postTitle">
                讨论贴
            </view>
            <van-cell-group>
                <van-cell title="置顶" is-link link-type="navigateTo" url="../info/info" border="{{ false }}" icon="back-top"/>
                <van-cell title="热门" is-link link-type="navigateTo" url="../info/info" border="{{ false }}" icon="fire-o"/>
                <van-cell title="最新" is-link link-type="navigateTo" url="../info/info" border="{{ false }}" icon="label-o"/>
            </van-cell-group>
        </view>


        <view class="tabs">
            <van-tabs swipeable animated sticky active="{{ active }}" bind:change="onChange">
                <van-tab title="服务机构" name="institution">
                    <view class="institutionCards">
                        <view class="institutionCard" wx:for="{{institution}}" wx:for-index="index" wx:key="institutionId">
                            <view class="institutionHead">
                                <image class="institutionImg" src="{{item.institutionImg}}" mode="aspectFit" />
                            </view>
                            <view class="institutionContent">
                                <view class="institutionName">
                                    {{item.institutionName}}
                                </view>
                                <view class="institutionStar">
                                    <van-rate readonly allow-half value="{{ item.institutionStar }}" 
                                    icon="like" void-icon="like-o" style="background:#ea0606;"
                                    color="#ffffff" void-color="#eee"/>
                                    {{item.institutionEva ? item.institutionEva:0}}条
                                </view>
                                <view class="institutionOrder">
                                    已售订单：{{item.institutionOrder}}
                                </view>
                            </view>
                        </view>
                    </view>
                </van-tab>
                <van-tab title="服务人员" name="service">
                    内容 2
                    
                      
                </van-tab>
            </van-tabs>
        </view>


    </view>


</view>