/* pages/home/home.wxss */
@import "../../utils/iconfont-weapp-icon.wxss";

page{
    background-color: #f7f8fa;
    /* #f7f8fa; */
}

.header{
    padding: 10rpx 20rpx;
    background: #ffffff;
    /* border-radius: 10rpx; */
}

.swiper {
    height: 400rpx;
    width: 100%;
}

.swiper image {
    height: 100%;
    width: 100%;
    border-radius: 10rpx;
}

.content {
    padding: 20rpx;
    background: #ffffff;
    margin-top: 20rpx;
}

.affairs {
    margin: 20rpx 0;
    display: flex;
    flex-wrap: wrap;
}

.affair {
    height: 160rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.affairCard{
    width: 20%;
    height: 90%;
    text-align: center;
    border-radius: 10rpx;
    margin: 17rpx;
}

.cardHead{
    height: 25%;
    font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    font-size: 26rpx;
    display: flex;
    justify-content: center;
    align-items: flex-end;
}

.cardIcons {
    height: 75%;
    display: flex;
    justify-content: center;
    align-items: flex-start;
}

.cardIcon{
    width: 100rpx;
    height: 100rpx;
    background: #fbfbfb;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: flex-end;
}

.cardImg{
    width: 60rpx;
    height: 60rpx;
}

.posts {
    border-radius: 10rpx;
}

.postHead {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.postName {
    font-size: 36rpx;
    font-weight: 600;
}
.postAll {
    font-size: 26rpx;
    font-weight: 300;
    color: #ab0014;
}
.postContent {
    padding: 10rpx;
    display: flex;
    flex-direction: column;
}
.postCell {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx 0;
}
.cellLeft {
    display: flex;
    align-items: center;
}
.postIcon{
    width: 36rpx;
    height: 36rpx;
    background: #ab0014;
    color: #fff;
    font-size: 26rpx;
    font-weight: 100;
    display: flex;
    align-items: center;
    justify-content: center;
}

.postTitle {
    padding-left: 10rpx;
}
.postRight {
    font-size: 26rpx;
    color: #ababab;
}

/* .postTitle {
    font-size: 45rpx;
    text-align: center;
    font-weight: bold;
} */

.tabs {
    background: #ffffff;
}

.institutionCard,.serviceCard {
    display: flex;
    flex-direction: row;
    margin: 5rpx 0;
    padding: 40rpx 0;
    justify-content: flex-start;
    border-bottom: 1px solid #eaeaea;
}

.institutionCard {
    height: 220rpx;
}

.institutionHead,.serviceHead {
    width: 25%;
    display: flex;
    justify-content: center;
}

.institutionImg {
    max-width: 100%;
    max-height: 100%;
    border-radius: 30rpx;
}

.serviceImg {
    border-radius: 50%;
    height: 140rpx;
    width: 140rpx;
}

.institutionContent,.serviceContent {
    width: 75%;
    padding-left: 3%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-around;
}

.institutionName,.serviceName {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-weight: bolder;
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.institutionStar,.serviceStar {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.institutionStarText,.serviceText {
    color: #333333;
    font-size: small;
    margin: 0 10rpx;
}
.institutionOrder,.serviceOrder{
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.institutionOrderNum,.serviceOrderNum {
    color: #8a8a8a;
    font-size: 22rpx;
}

.institutionStars,.serviceStars {
    color: #8a8a8a;
    font-size: 22rpx;
}

.servicePrice {
    display: flex;
    align-items: center;
}

.servicePriceNum {
    color: #ea0606;
    font-size: 38rpx;
}

.servicePriceTip {
    color: #676767;
    font-size: 26rpx;
}