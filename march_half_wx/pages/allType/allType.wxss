/* pages/allType/allType.wxss */
@import "../../utils/iconfont-weapp-icon.wxss";

page{
    background-color: #fff;
    /* #f7f8fa; */
}

.affairs {
    margin: 20rpx 0;
    display: flex;
    flex-wrap: wrap;
}

.affairCard{
    width: 20%;
    height: 90%;
    text-align: center;
    border-radius: 10rpx;
    margin: 20rpx 0;
}

.cardHead{
    height: 25%;
    font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    font-size: 26rpx;
    display: flex;
    justify-content: center;
    align-items: flex-end;
}

.cardIcons {
    height: 75%;
    display: flex;
    justify-content: center;
    align-items: flex-start;
}

.cardIcon{
    width: 100rpx;
    height: 100rpx;
    background: #fbfbfb;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: flex-end;
}

.cardImg{
    width: 60rpx;
    height: 60rpx;
}